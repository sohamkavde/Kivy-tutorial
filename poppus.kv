#:import Factory kivy.factory.Factory
<Mypops@Popup>
    auto_dismiss:True
    title:"This is just a pop-pop"
    size_hint:(.4,.3)
    pos_hint:{"x":.4,"top":0.9}
    BoxLayout:
        orientation:"vertical"
        Button:
            text:"close me"
            on_release:root.dismiss()

